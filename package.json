{
    "name": "vscode-razor-formatter",
    "displayName": "vscode-razor-formatter",
    "description": "Formatter for razor/blazor language",
    "version": "0.0.1",
    "license": "MIT",
    "contributors": [
        {
            "name": "Mathieux Bergeron",
            "email": "mathieuxxxx@gmail.com"
        }
    ],
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:razor-formatter.format",
        "onLanguage:aspnetcorerazor"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "razor-formatter.format",
                "title": "Format razor/blazor"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js",
        "deploy": "vsce publish --yarn"
    },
    "devDependencies": {
        "@types/glob": "7.1.1",
        "@types/js-beautify": "1.11.0",
        "@types/mocha": "7.0.2",
        "@types/node": "13.11.0",
        "@types/vscode": "1.47.0",
        "@typescript-eslint/eslint-plugin": "2.30.0",
        "@typescript-eslint/parser": "2.30.0",
        "eslint": "6.8.0",
        "glob": "7.1.6",
        "mocha": "7.1.2",
        "parcel-bundler": "1.12.4",
        "typescript": "3.8.3",
        "vscode-test": "1.3.0"
    },
    "dependencies": {
        "js-beautify": "1.11.0"
    }
}
